    <link rel="stylesheet" href={{ asset('css/salarie.css')}}>
{% endblock %}
{% block contenu %}
<h1>{{ salarie.nom ~ ' ' ~ salarie.prenom }}</h1>
<a href="/salaries"><button class="btn shadow-1 rounded-1 btn-outline btn-opening">Retour Ã  la liste</button></a>
