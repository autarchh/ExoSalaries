{% extends 'base.html.twig' %}

{% block title %}S'enregister{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href={{ asset('css/salarie.css')}}>
{% endblock %}
{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>S'enregistrer</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'form-material'}}) }}
    <div class="grix xs1 sm2">
        <div class="form-field">
           {{ form_label(registrationForm.email, "Email") }}
            {{ form_widget(registrationForm.email)}}
        </div>
        <div class="form-field">
            {{ form_label(registrationForm.plainPassword, "Password") }}
            {{ form_widget(registrationForm.plainPassword) }}
        </div>
    </div>
    <br>
    <h5>{{ form_row(registrationForm.agreeTerms) }}</h5>
    <br>
    <button id="openConditions">Voir les conditions d'utilisations</button>
    <br><br>
    <button class='btn rounded-1 green press' type="submit" class="btn">Register</button>
  {{ form_end(registrationForm) }}
{% endblock %}
